<header>
      <div class="header">
      <%= link_to root_path do %>
      NewYorkCityMap
      <% end %>
      
        
        <% if user_signed_in? %>
        
        
          <%= link_to "Mypage", user_path(current_user.id) %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "Login", tweets_path %>
          <%= link_to "SignUp", new_user_registration_path %>
        <% end %>

        <%= link_to 'Manhattan', manhattans_path %>
        <%= link_to 'Brooklyn', brooklyns_path %>
        <%= link_to 'Bronx', brons_path %>
        <%= link_to 'Queens', queens_path %>
        <%= link_to 'Statenisland', statenislands_path %>

        <%= link_to '診断', shindans_path %>

        </div>
    
</header>

<div class="sh-new-block">

<ul>
<%= form_for(@shindan, class: 'form-horizontal', role: 'form') do |f| %>
    <div class="shindan-container">
        
        <div class="col-12">
            <p>Q1. 遊び方…</p>
        </div>

        <div class="col-6">
            <%= f.radio_button :question1, "1", id: "custom_id1" %>
            <label for="custom_id1">インドア派だ</label>
            <%= f.radio_button :question1, "2", id: "custom_id2" %>
            <label for="custom_id2">アウトドア派だ</label>
        </div>

        <div class="col-12">
            <p>Q2. 自分の価値観として近い方は…</p>
        </div> 

        <div class="col-6">
            <%= f.radio_button :question2, "1", id: "custom_id3" %>
            <label for="custom_id3">体を動かすことが好きだ</label>
            <%= f.radio_button :question2, "2", id: "custom_id4" %>
            <label for="custom_id4">考えることが好きだ</label>
        </div>   

        <div class="col-12">
            <p>Q3. 人と接するときは…</p>
        </div>

        <div class="col-6">
            <%= f.radio_button :question3, "1", id: "custom_id5" %>
            <label for="custom_id5">相手の話をよく聞く方だ</label>
            <%= f.radio_button :question3, "2", id: "custom_id6" %>
            <label for="custom_id6">自分の話をよくする方だ</label>
        </div>
    
        <div class="col-12">
            <p>Q4. 大切にしたいのは…</p>
        </div>

        <div class="col-6">
            <%= f.radio_button :question4, "1", id: "custom_id7" %>
            <label for="custom_id7">論理性だ</label>
            <%= f.radio_button :question4, "2", id: "custom_id8" %>
            <label for="custom_id8">情緒だ</label>
        </div>
        
    </div>
    <div class="sindanbotan">
        <%= f.submit " 結果を見る " %>
    </div>
<% end %>
</ul>

</div>