        <% else %>
          <%= link_to "Login", tweets_path %>
          <%= link_to "SignUp", new_user_registration_path %>
        <% end %>

        <%= link_to 'Manhattan', manhattans_path %>
        <%= link_to 'Brooklyn', brooklyns_path %>
        <%= link_to 'Bronx', brons_path %>
        <%= link_to 'Queens', queens_path %>
        <%= link_to 'Statenisland', statenislands_path %>

        <%= link_to '診断', shindans_path %>

        </div>
    
</header>

<h1>users#show</h1>
<%= image_tag @user.image_url, size: "200x200" if @user.image? %>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "プロフィール編集", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.tweets.each do |t| %>
 <%= image_tag t.image_url, size: "300x300" if t.image? %><br>
  <%= t.user.name %>
  <%= t.name %>
<% end %>

<%= link_to "Tweet一覧に戻る", tweets_path %>

